<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <!-- Sets the protocol which is how Arquillian talks and executes the tests inside the container. -->
    <defaultProtocol type="Servlet 3.0" />

    <group qualifier="jboss-as" default="true">
    <!-- Configuration to be used when the JBoss remote profile is active -->
        <container qualifier="jboss-as" default="true">
            <configuration>
                <property name="jbossHome">${jbossHome:target/jboss-as-7.1.1.Final}</property>
            </configuration>
        </container>
    </group>

    <group qualifier="openshift">
        <container qualifier="openshift-non-deployingcontainer" default="true">
            <configuration>
                <property name="baseURI">https://${openshift.app:aerogear}-${openshift.namespace:okiss}.${openshift.brooker:rhcloud.com}</property>
                <property name="contextRootRemap">{'ag-push' : '/'}</property>
            </configuration>
        </container>
    </group>

    <extension qualifier="graphene">
        <!-- we set wait to 20 seconds, to pass on OpenShift -->
        <property name="waitModelInterval">20</property>
    </extension>

    <extension qualifier="webdriver">
        <property name="browser">${browser:firefox}</property>
    </extension>

</arquillian>
